<div class="footer">
  <div class="footer-element">
    <%= link_to pages_home_path, class: "footer-link" do %>
      <i class="fas fa-home"></i>
    <% end %>
  </div>
  <div class="footer-element">
    <%= link_to categories_path, class: "footer-link" do %>
      <i class="fas fa-calendar-alt"></i>
    <% end %>
  </div>
  <div class="footer-element">
    <%= link_to "#", class: "footer-link" do %>
      <i class="fas fa-map-marker-alt"></i>
    <% end %>
  </div>
  <div class="footer-element">
    <%= link_to "#", class: "footer-link" do %>
      <i class="fas fa-bookmark"></i>
    <% end %>
  </div>
  <div class="footer-element">
    <% if user_signed_in? %>
      <%= link_to user_path(@user), class: "footer-link" do %>
              <i class="fas fa-user"></i>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
              <i class="fas fa-user"></i>
      <% end %>
    <% end %>
  </div>
</div>
