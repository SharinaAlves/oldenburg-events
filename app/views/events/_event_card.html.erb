<%= link_to event_path(event), class: 'event-card' do %>
  <div class="card-event border-bottom">
    <div class="card-info">
      <strong><%= truncate(event.name, length: 45) %></strong><br>
      <%= event.location %><br>
      <i class="far fa-clock"></i> <%= event.time.strftime('%H:%M') %>
      <i class="fas fa-map-marker-alt ml-2"></i> <%#= @distance %>
    </div>
    <div class="card-img">
      <%= image_tag(event.image) if event.image != nil %>
    </div>
  </div>
<% end %>
