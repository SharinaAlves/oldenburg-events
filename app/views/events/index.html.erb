<h1>Events#index</h1>

<% @events.each do |event| %>
  <%= link_to event_path(event) do %>
    <div class="card-event">
      <div>
        <strong><%= event.name %></strong><br>
        <%= event.location %><br>
        <i class="far fa-clock"></i> <%= event.time.strftime('%H:%M') %>
        <i class="fas fa-map-marker-alt"></i> <%#= distance_between(event.lat, event.lon, current_location[0], current_location[1]) %>
      </div>
      <div>
        <!-- problem with fb images. URL can't be used over a longer time -->
        <%= image_tag(event.image) if event.image != nil %>
      </div>
    </div>
  <% end %>
<% end %>
