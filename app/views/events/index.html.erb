<h1>Events#index</h1>
<button id="location">Location</button>

<% @events.each do |event| %>
  <%= link_to event_path(event) do %>
    <div class="card-event">
      <div>
        <strong><%= event.name %></strong><br>
        <%= event.location %><br>
        <i class="far fa-clock"></i> <%= event.time.strftime('%H:%M') %>
        <i class="fas fa-map-marker-alt"></i> <%= (Geocoder::Calculations.distance_between([event.latitude, event.longitude], [@latitude, @longitude])*100).round / 100.0 %>
      </div>
      <div>
        <!-- problem with fb images. URL can't be used over a longer time -->
        <%= image_tag(event.image) if event.image != nil %>
      </div>
    </div>
  <% end %>
<% end %>
